<?xml version='1.0' encoding='utf-8'?>
<widget xmlns:android="http://schemas.android.com/apk/res/android" id="com.ps8.coolwar" version="1.0.0"
        xlmns="http://www.w3.org/ns/widgets">

    <name>coolWar</name>
    <description>Sample Apache Cordova App</description>
    <author email="dev@cordova.apache.org" href="https://cordova.apache.org">
        Apache Cordova Team
    </author>
    <content src="index.html" />

    <preference name="scheme" value="http" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />

    <access origin="*" />
    <allow-navigation href="http://localhost/*" />
    <allow-navigation href="http://coolwar.ps8.academy/*" />

    <preference name="hostname" value="coolwar.ps8.academy" />

    <platform name="android">
        <edit-config file="app/src/main/AndroidManifest.xml" mode="merge" target="/manifest/application">
            <application android:usesCleartextTraffic="true" />
        </edit-config>
    </platform>


</widget>